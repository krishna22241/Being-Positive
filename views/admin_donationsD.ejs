<!DOCTYPE html>
<html lang="en">
<head>

    <title>admin to donoations panel</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="budy">
    <div class="red_nav"><h2>BEING POSITIVE</h2> <a
        class="logs"
        id="logoutButton"
        href="/api/v1/signout"
        style="background-color: rgb(191, 32, 32), color=white"
        >LOGOUT</a
      ></div>
    <div class="bodf">
    <div class="leftz">
        <ul>
            <li><a href="/Ahome">HOME</li></a>
            <li><a href="/adminD">DONOR</li></a>
            <li><a href="/adminP">PATIENT</li></a>
            <li  style="background: bisque; color:#1e1e25;"><a href="#">DONATIONS</li></a>
            <li><a href="/adminPR">BLOOD REQUESTS</li></a>

        </ul>
    </div>
    <div class="rightz">
        <h1 style="font-size:xx-large; margin-left:120px; margin-top:65px;">DONATIONS</h1>
         <table class="donor_dets">
           <thead>
          <tr>
            <th>NAME</th>
            <th>BLOOD GROUP</th>
            <th>QUANTITY</th>
            <th>DISEASE</th>
            <th>STATUS</th>
            <th>DATE</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% donorRequests.forEach((request, index) => { %>
      <tr>
        <td><%= request.donorName %></td>
        <td><%= request.donorBloodGroup %></td>
        <td><%= request.donationQuantity %></td>
        <td><%= request.donationDisease %></td>
        <td><%= request.donationStatus %></td>
        <td><%= request.donationDate %></td>
        <td>
          <% if (request.donationStatus === 'pending') { %>
            <form method="post" action="/approve/<%= index %>">
              <button type="submit">Approve</button>
            </form>
          <% } else { %>
            <!-- Add logic for other actions if needed -->
          <% } %>
        </td>
      </tr>
    <% }); %>  
        </tbody>
        
    </tbody>
  </table>
    </div>
</div>
</body>
</html>